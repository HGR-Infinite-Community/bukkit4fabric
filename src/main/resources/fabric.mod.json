{
  "schemaVersion": 1,
  "id": "bukkitfabric",
  "version": "${version}",

  "name": "Bukkit for Fabric",
  "description": "An implementation of the popular Bukkit API for Fabric",
  "authors": [
    "Isaiah",
    "Sam_Chai",
    "Mr_Notch"
  ],
  "contact": {
    "homepage": "https://fungus-soft.com/",
    "sources": "https://github.com/fungus-soft/fabricbukkit/"
  },

  "license": "GPLv3",
  "icon": "assets/fabricbukkit/icon.png",
  "accessWidener" : "bukkitfabric.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.javazilla.bukkitfabric.BukkitFabricMod"
    ]
  },
  "mixins": [
    "bukkitfabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.1",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }

}
